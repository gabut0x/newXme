# XME Projects Backend Environment Configuration
# Copy this file to .env and configure the values for your environment

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
APP_NAME=XME Projects
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_PATH=./data/xme_projects.db

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# SECURITY: Change JWT_SECRET to a strong, unique value in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# SECURITY: Updated default from address to use proper domain
EMAIL_FROM=XME Notifications <noreply@xmeprojects.com>

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=12
VERIFICATION_CODE_EXPIRES_MINUTES=15

# ===========================================
# CORS CONFIGURATION
# ===========================================
# SECURITY: Configure allowed origins for production
CORS_ORIGIN=http://localhost:5173

# ===========================================
# RECAPTCHA CONFIGURATION
# ===========================================
# Get keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# ===========================================
# PAYMENT GATEWAY (TRIPAY)
# ===========================================
# Get credentials from: https://tripay.co.id
TRIPAY_API_KEY=your-tripay-api-key
TRIPAY_PRIVATE_KEY=your-tripay-private-key
TRIPAY_MERCHANT_CODE=your-tripay-merchant-code
TRIPAY_BASE_URL=https://tripay.co.id/api-sandbox

# ===========================================
# DOWNLOAD SERVER CONFIGURATION
# ===========================================
TRACK_SERVER=http://localhost:3001
ASIA_BASE_URL=https://asia-files.example.com
AUSTRALIA_BASE_URL=https://au-files.example.com
GLOBAL_BASE_URL=https://global-files.example.com

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
# Bot polling interval in milliseconds (default: 2000)
TELEGRAM_POLLING_INTERVAL=2000
# Enable/disable bot auto-start on server startup (true/false)
TELEGRAM_BOT_AUTO_START=true
# Use polling mode instead of webhook (true for development, false for production)
TELEGRAM_USE_POLLING=false